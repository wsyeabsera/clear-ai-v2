{
  "name": "clear-ai-v2",
  "version": "1.0.0",
  "description": "Modular AI agent system with LangGraph and MCP tools",
  "type": "module",
  "main": "dist/main.js",
  "bin": {
    "clear-ai-mcp": "./dist/main.js"
  },
  "packageManager": "yarn@4.9.2",
  "scripts": {
    "build": "tsc",
    "start": "node dist/main.js",
    "dev": "ts-node --esm src/main.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:esm": "NODE_OPTIONS=--experimental-vm-modules jest",
    "lint": "tsc --noEmit"
  },
  "keywords": [
    "ai",
    "agent",
    "langgraph",
    "mcp",
    "tools",
    "orchestration"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.65.0",
    "@langchain/core": "^0.3.78",
    "@langchain/langgraph": "^0.4.9",
    "@modelcontextprotocol/sdk": "^1.20.0",
    "@pinecone-database/pinecone": "^6.1.2",
    "axios": "^1.12.2",
    "dotenv": "^17.2.3",
    "neo4j-driver": "^6.0.0",
    "openai": "^6.3.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.7.2",
    "@types/supertest": "^6.0.3",
    "jest": "^30.2.0",
    "jest-util": "^30.2.0",
    "nock": "^14.0.10",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5"
  }
