{
  "name": "agent-tester",
  "version": "1.0.0",
  "description": "Comprehensive testing framework for Clear AI v2 agent system",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "test:run": "node dist/index.js",
    "test:watch": "nodemon --watch scenarios --exec 'yarn build && yarn test:run'",
    "test:scenario": "node dist/index.js --scenario",
    "test:category": "node dist/index.js --category",
    "test:all": "node dist/index.js --all",
    "dev": "tsc && node dist/index.js",
    "clean": "rm -rf dist",
    "lint": "tsc --noEmit"
  },
  "keywords": [
    "testing",
    "agent",
    "graphql",
    "validation"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "ajv": "^8.12.0",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "dotenv": "^16.3.1",
    "glob": "^11.0.3",
    "graphql": "^16.11.0",
    "graphql-request": "^6.1.0",
    "graphql-ws": "^5.14.0",
    "handlebars": "^4.7.8",
    "js-yaml": "^4.1.0",
    "mongoose": "^8.0.0",
    "openai": "^6.3.0",
    "ora": "^8.0.1",
    "p-limit": "^5.0.0",
    "ws": "^8.18.0",
    "yaml": "^2.8.1"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.8.0",
    "@types/ws": "^8.5.10",
    "nodemon": "^3.0.2",
    "typescript": "^5.9.3"
  }
}
